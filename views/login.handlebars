<div class="fullscreen d-flex align-items-center justify-content-center bg-wave">
    <div class="container px-xl-5">
        <div class="row">
            {{> signin-up}}

            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-body pt-4 px-4 shadow-sm">
                        <form action="../api/login" method="POST" class="">
                                <input type="text" name="username" class="form-control mb-4 p-25" placeholder="username or email">
                            <input type="password" name="password" class="form-control mb-4 p-25" placeholder="password">
                            <button type="submit" class="btn container-fluid btn-primary text-white btn-text p-2 border-radius fs-5">Login</button>
                            <div class="d-flex justify-content-center my-0">
                                <a href="#" class="link-primary pt-25 fs-7">Forgot password?</a>
                            </div>
                            <div class="d-flex justify-content-center my-0">
                                <a href="/signup" class="link-primary pt-2 fs-7">Don't have an account?</a>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>